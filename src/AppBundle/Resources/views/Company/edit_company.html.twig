{% extends "AppBundle:Layouts:layoutprofiles.html.twig"%}
{% block content %}
    <div class="container">
        <div class="col-lg-4"></div>
        <div class="col-lg-8">
            {{form_start(form, {'enctype':'multipart/form-data'})}}
            <h3>Datos de la empresa</h3>
            <div class="form-group">
                {{ form_row(form.logo) }}
            </div>

            <div class="form-group">
                {{ form_row(form.tradename) }}
            </div>
            
            <div class="form-group">
                {{ form_row(form.businessname) }}
            </div>
            
            <div class="form-group">
                {{ form_row(form.rfc) }}
            </div>
            <div class="form-group">
                {{ form_row(form.description) }}
            </div>
            <div class="form-group">
                {{ form_row(form.businesssector) }}
            </div>
            
            <h3>Datos del  representante</h3>
            <div class="form-group">
                {{ form_row(form.contacname) }}
            </div>
            <div class="form-group">
                {{ form_row(form.position) }}
            </div>
            <div class="form-group">
                {{ form_row(form.telephoneext) }}
            </div>
            <div class="form-group">
                {{ form_row(form.businessemail) }}
            </div>

            {{form_end(form)}}
        </div>
    </div>
{% endblock %}