{% extends "AppBundle:Layouts:layoutprofiles.html.twig" %}
{% block javascripts %}
    
    {{ parent() }}
    <script src="{{asset('assets/js/custom/email-test.js')}}"></script>
{% endblock %}

{% block content %}
    
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h1>Se parte de este gran proyecto</h1>
                <img src="{{ asset('assets/images/myjobsadvisor-register.png')}}" class="img-responsive img-register" alt="">
            </div>
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading"><h4>Únete a MyJobsAdvisor</h4></div>
                    <div class="panel-body">
                        {{form_start(form, {'action':'', 'method':'POST'})}}
                            {{form_errors(form)}}
                            <div class="col-lg-12 form-group">
                                {{form_row(form.name)}}
                            </div>
                            <div class="col-lg-6 form-group">
                                {{form_row(form.plastname)}}
                            </div>
                            <div class="col-lg-6 form-group">
                                {{form_row(form.mlastname)}}
                            </div>
                            <div class=" col-lg-12 form-group">
                                {{form_row(form.email)}}
                            </div>
                            <div class="col-lg-6 form-group">
                                {{form_row(form.age)}}
                            </div>
                            <div class="col-lg-6 form-group">
                                {{form_row(form.telephone)}}
                            </div>
                            <div class="col-lg-6 form-group">
                                {{form_row(form.password)}}
                            </div>
                            <div class="col-lg-6 form-group">
                                <label for="confirmpasswordInput">Confirmar contraseña</label>
                                <input type="password" class="form-control" id="confirmpasswordInput" placeholder="Confirmar contraseña">
                            </div>
                            <div class="col-lg-6 form-group">
                                {{form_row(form.datejob)}}
                            </div>
                          
                            <div class="col-lg-6 form-group">
                                {{form_row(form.anonimo)}}
                            </div>
                            <div class="col-lg-12 checkbox">
                                <label>{{form_row(form.termscondition)}}</label> Acepta terminos y condiciones
                            </div>
                            <div class="col-lg-12">
                                {{form_row(form.Registrarse)}}
                            </div>
                            <div class="clearfix"></div>
                        {{form_end(form)}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container -->
{% endblock %}
