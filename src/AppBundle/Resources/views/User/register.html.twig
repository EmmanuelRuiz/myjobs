{% extends "AppBundle:Layouts:layoutprofiles.html.twig" %}
{% block javascripts %}
    
    {{ parent() }}
    <script src="{{asset('assets/js/custom/email-test.js')}}"></script>
{% endblock %}

{% block content %}
    
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h1>Se parte de este gran proyecto</h1>
                <img src="{{ asset('assets/images/myjobsadvisor-register.png')}}" class="img-responsive img-register" alt="">
            </div>
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading"><h4>Únete a MyJobsAdvisor</h4></div>
                    <div class="panel-body">
                        <form action="">
                            <div class="col-lg-12 form-group">
                                <label for="nameInput">Nombre</label>
                                <input type="text" class="form-control" id="nameInput" placeholder="Nombre completo">
                            </div>
                            <div class="col-lg-6 form-group">
                                <label for="plastnameInput">Apellido Paterno</label>
                                <input type="text" class="form-control" id="plastnameInput" placeholder="Apellido paterno">
                            </div>
                            <div class="col-lg-6 form-group">
                                <label for="mlastnameInput">Apellido Materno</label>
                                <input type="text" class="form-control" id="mlastnameInput" placeholder="Apellido materno">
                            </div>
                            <div class=" col-lg-12 form-group">
                                <label for="emailInput">Correo electronico</label>
                                <input type="email" class="form-control" id="emailInput" placeholder="Correo electronico">
                            </div>
                            <div class="col-lg-6 form-group">
                                <label for="birthdayInput">Fecha de nacimiento</label>
                                <input type="text" class="form-control" id="birthdayInput" placeholder="Fecha de nacimiento">
                            </div>
                            <div class="col-lg-6 form-group">
                                <label for="cellphonenumberInput">Numero de telefono</label>
                                <input type="text" class="form-control" id="cellphonenumberInput" placeholder="Numero de telefono/celular">
                            </div>
                            <div class="col-lg-6 form-group">
                                <label for="passwordInput">Contraseña</label>
                                <input type="password" class="form-control" id="passwordInput" placeholder="Contraseña">
                            </div>
                            <div class="col-lg-6 form-group">
                                <label for="confirmpasswordInput">Confirmar contraseña</label>
                                <input type="password" class="form-control" id="confirmpasswordInput" placeholder="Confirmar contraseña">
                            </div>
                            <div class="col-lg-4 form-group">
                                <label for="dateJobInput">Fecha de trabajo</label>
                                <input type="text" class="form-control" id="dateJobInput" placeholder="Fecha de trabajo">
                            </div>
                            <div class="col-lg-4 form-group">
                                <label for="privacyInput">Privacidad</label>
                                <input type="text" class="form-control" id="privacyInput" placeholder="Privacidad">
                            </div>
                            <div class="col-lg-4 form-group">
                                <label for="profileType">Tipo de perfil</label>
                                <select class="form-control">
                                  <option>Anonimo</option>
                                  <option>Publico</option>
                                </select>
                            </div>
                            <div class="col-lg-12 checkbox">
                                <label>
                                  <input type="checkbox" value="">
                                  Acepto terminos y condiciones
                                </label>
                            </div>
                            <div class="col-lg-12">
                                <button type="submit" class="col-lg-12 btn btn-default">Registrar</button>
                            </div>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container -->

    <div class="col-lg-6 box-form">
        <h2>Registrarse</h2>
        <hr>
        
        {{form_start(form, {'action':'', 'method':'POST'})}}

        {{form_errors(form)}}
        
        {{form_end(form)}}
    </div>
    
{% endblock %}
